<mtapp:setting    id="counting"    label="<__trans phrase="Counting">">  <ul>    <li><input type="checkbox" name="cnt_title" id="cnt_title" value="1" <TMPL_IF NAME=CNT_TITLE>checked="checked"</TMPL_IF> />    <__trans phrase="Title"></li>    <li><input type="checkbox" name="cnt_body" id="cnt_body" value="1" <TMPL_IF NAME=CNT_BODY>checked="checked"</TMPL_IF> />    <__trans phrase="Page Body"></li>    <li><input type="checkbox" name="cnt_more" id="cnt_more" value="1" <TMPL_IF NAME=CNT_MORE>checked="checked"</TMPL_IF> />    <__trans phrase="Extended Page"></li>  </ul></mtapp:setting><mtapp:setting    id="option"    label="<__trans phrase="Option">">  <ul>    <li><input type="checkbox" name="opt_remove_html" id="opt_remove_html" value="1" <TMPL_IF NAME=OPT_REMOVE_HTML>checked="checked"</TMPL_IF> />    <__trans phrase="Ignore HTML tags"></li>  </ul></mtapp:setting><mtapp:setting    id="speed"    label="<__trans phrase="Reading Speed">">  <input type="text" name="speed" id="speed" value="<TMPL_VAR NAME=SPEED>" size="8" />  <__trans phrase="characters per minute"></mtapp:setting><mtapp:setting    id="phrase"    label="<__trans phrase="Output Phrase">">  <p>    <__trans phrase="When the estimated time is less than a minute."><br />    <input type="text" name="phrase_0" id="phrase_0" value="<TMPL_VAR NAME=PHRASE_0 ESCAPE=HTML>" /><br />  </p><p>    <__trans phrase="When the estimated time is a few minutes. %d will be relaced into the figures."><br />    <input type="text" name="phrase_n" id="phrase_n" value="<TMPL_VAR NAME=PHRASE_N ESCAPE=HTML>" /><br />  </p></mtapp:setting>